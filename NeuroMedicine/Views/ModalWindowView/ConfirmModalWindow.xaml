<views:BaseView x:Class="NeuroMedicine.Views.ModalWindowView.ConfirmModalWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeuroMedicine.Views.ModalWindowView"
             xmlns:views="clr-namespace:NeuroMedicine.Views.WindowView"
             mc:Ignorable="d" 
             Width="500" Height="200">
    <TextBlock Padding="20" 
               Text="{Binding Text,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
               FontSize="20" 
               TextWrapping="Wrap"
               TextAlignment="Center"
               VerticalAlignment="Center"/>
</views:BaseView>
